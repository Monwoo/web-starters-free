                {{ 'en'|locale_name('en')|u.title }}
                </a></li>
                <li><a class="dropdown-item" href="{{ path('mws_moon_manager', {_locale: 'fr'}) }}">
                {{ 'fr'|locale_name('fr')|u.title }}
