					{{ svelte_component('MwsHeader', {
						"locale": app.locale
					}) }}>
						{# Sticky Header and Footer with Tailwind #}
					</header>
				{% endblock %}
		    <main class="flex-1 overflow-y-auto p-5">
					{% block content %}
						{# DEFAULT content view #}
