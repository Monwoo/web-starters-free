{% set model = {
    description: "Backup"|trans,
    fitToContainer: true,
    completeText: {
        en: "Import backup",
        fr: "Importer le backup"
    },
    focusFirstQuestionAutomatic: false,
    showQuestionNumbers: false,
    elements: [{
            "_cmt": "https://surveyjs.io/form-library/documentation/customize-question-types/create-custom-widgets",
            "type": "file",
            "title": "Import .zip or .sqlite backup (max " ~
                (CONFIG_BCKUP_MAX_UPLOAD_SIZE
                ? CONFIG_BCKUP_MAX_UPLOAD_SIZE|bytesSize|humanSize
                : '20 Mo')
            ~ ")",
            "name": "uploadFile",
            "showCommentArea": false,
            "storeDataAsText": false,
            "waitForUpload": true,
            "allowMultiple": false,
            "maxSize": (CONFIG_BCKUP_MAX_UPLOAD_SIZE
            ?? '20Mo')|bytesSize,
            "hideNumber": true
        }
    ]
} %}
{{ model|serialize('json')|raw }}

