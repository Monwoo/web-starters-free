{% extends '@MoonManager/base.html.twig' %}

{% block title %}Edit {{ targetUser.username }}
{% endblock %}

{% block body %}
	<div class="mws-user-edit" {{ svelte_component('MwsUserEdit', {
		'copyright': 'mws.copyright'|trans({}, 'mws-moon-manager'),
		'locale': app.locale,
		'user': targetUser|serialize('json')|e('html_attr'),
		'editForm': (form_start(formUser)
		~ form_widget(formUser)
		~ form_end(formUser))|e('html_attr'),
		'passwordResetForm': (form_start(formPwd)
		~ form_widget(formPwd)
		~ form_end(formPwd))|e('html_attr'),
		'viewTemplate' : viewTemplate,
	} ) }}>
		<div class="flex flex-col justify-end content-end items-stretch min-h-[100dvh] md:h-[100dvh] overflow-hidden print:h-auto">
			{{ block('header') }}
			<div
			class="flex-1 md:overflow-y-auto">
				{{ block('content') }}
			</div>
			{{ block('footer') }}
		</div>
	</div>
{% endblock %}
